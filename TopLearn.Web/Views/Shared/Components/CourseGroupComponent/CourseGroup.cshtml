@model IEnumerable<TopLearn.DataLayer.Entities.Course.CourseGroup>
<div class="main-menu">
    <div class="container">
        <nav>
            <span class="responsive-sign"><i class="zmdi zmdi-menu"></i></span>
            <ul>
                @foreach (var group in Model.Where(g => g.ParentId == null))
                {
                    <li>
                        <a href=""> @group.GroupTitle </a>
                        <ul>
                            @foreach (var subgroup in Model.Where(g => g.ParentId == group.GroupId))
                            {

                                <li><a href=""> @subgroup.GroupTitle </a></li>
                                  
                            }
                        </ul>
                    </li>

                }
            </ul>
        </nav>
    </div>
</div>