@page "{id}"
@model TopLearn.Web.Pages.Admin.Courses.CreateEpisodeModel
@{
    ViewData["Title"] = "بخش جدید";
}

<h1>بخش جدید</h1>

<div class="row">
<form method="post" enctype="multipart/form-data">
    <div class="col-md-8">
        <input type="hidden" asp-for="CourseEpisode.CourseId"/>
        <h2>اطلاعات بخش جدید</h2>
        <hr/>
        <div class="form-group">
            <label>عنوان بخش</label>
            <input type="text" asp-for="CourseEpisode.EpisodeTitle" class="form-control">
            <span asp-validation-for="CourseEpisode.EpisodeTitle"></span>
        </div>
        <label>زمان بخش</label>
        <input type="text" asp-for="CourseEpisode.EpisodeTime" class="form-control">
        <span asp-validation-for="CourseEpisode.EpisodeTime"></span>

        <div class="checkbox">
            <label>
                <input type="checkbox" asp-for="CourseEpisode.IsFree">رایگان است
            </label>
            <span asp-validation-for="CourseEpisode.IsFree"></span>
        </div>
        <div class="form-group">
            <label>انتخاب فایل</label>
            <input type="file" name="episodefile">
            <span asp-validation-for="CourseEpisode.EpisodeFileName"> انتخاب فایل اجباری است</span>
            @if (ViewData["EpisodeExist"]!=null)
            {
                <div clas="alert alert-danger">نام فایل معتبر نیست</div>
            }
        </div>
        <input type="submit" value="ذخیره بخش" class="btn btn-success" />
    </div>

</form>
</div>